<!-- pages/cart/cart.wxml —— 份数放底部 + 超干净版 -->
<view class="page">

  <!-- 标题栏：只写“已选菜品” -->
  <view class="header">
    <text class="title">已选菜品</text>
  </view>





  <!-- 菜品列表 -->
  <scroll-view class="cart-scroll" scroll-y>
    <view class="cart-list">
      <block wx:for="{{cartList}}" wx:key="id">
        <view class="cart-item">
          <view class="name">{{item.name}}</view>
          <view class="remove-text" bindtap="removeItem" data-index="{{index}}">移除</view>
        </view>
      </block>

      <!-- 空状态 -->
      <view wx:if="{{cartList.length === 0}}" class="empty-state">
        <!-- <image src="/images/empty-cart.png" class="empty-img" mode="widthFix" /> -->
        <text class="tip">还没有选菜哦～</text>
        <!-- <button class="go-menu-btn" open-type="switchTab" url="/pages/menu/menu">去点餐</button> -->
        <button class="go-menu-btn" bindtap="goToMenu">去点餐</button>
      </view>
    </view>
  </scroll-view>

  <!-- 底部：份数 + 下单按钮 并排 -->
  <view class="footer" wx:if="{{cartList.length > 0}}">
    <view class="count-info">
      已选 <text class="num">{{cartList.length}}</text> 份
    </view>
    <button class="submit-btn" bindtap="submitOrder">确认下单</button>
  </view>

</view>