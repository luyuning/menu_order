/* pages/cart/cart.wxss */
.page { height: 100vh; display: flex; flex-direction: column; background: #f8f8f8; }

.count { color: #ff4444; font-weight: bold; }

.cart-scroll { flex: 1; }

.cart-list { padding: 20rpx; }


.dish-img {
  width: 160rpx; height: 160rpx; border-radius: 16rpx; margin-right: 30rpx;
  background: #eee;
}

.info { flex: 1; }
.name { font-size: 34rpx; font-weight: bold; color: #333; margin-bottom: 12rpx; }
.price { font-size: 36rpx; color: #ff4444; font-weight: bold; }

.remove-btn {
  width: 80rpx; height: 80rpx; background: #ff4444; color: white;
  border-radius: 50%; font-size: 40rpx; padding: 0; line-height: 80rpx;
  min-height: unset;
}
.remove-btn-hover { background: #ff5555; transform: scale(1.1); }

.empty-state { text-align: center; padding-top: 200rpx; }
.empty-img { width: 400rpx; opacity: 0.8; }
.tip { display: block; margin: 40rpx 0; color: #999; font-size: 32rpx; }
.go-menu-btn {
  background: linear-gradient(90deg, #ff6b6b, #ffa500); color: white;
  border-radius: 60rpx; padding: 20rpx 80rpx; font-size: 34rpx;
}

.footer {
  height: 140rpx; background: white; padding: 0 40rpx;
  display: flex; align-items: center; justify-content: space-between;
  box-shadow: 0 -4rpx 30rpx rgba(0,0,0,0.08);
}
.total .label { font-size: 32rpx; color: #666; }
.total .amount { font-size: 48rpx; color: #ff4444; font-weight: bold; margin-left: 20rpx; }

.submit-btn {
  background: linear-gradient(90deg, #ff6b6b, #ff5252);
  color: white; border-radius: 60rpx; width: 360rpx; height: 90rpx;
  font-size: 36rpx; font-weight: bold;
}
.submit-btn-hover { transform: scale(1.03); opacity: 0.9; }
.submit-btn[disabled] { background: #ccc; }
.remove-text {
  color: #ff4444;
  font-size: 30rpx;
  padding: 10rpx 24rpx;
  border: 2rpx solid #ff4444;
  border-radius: 40rpx;
}
.remove-text:active {
  background: #ff4444;
  color: white;
}
.header {
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 20rpx rgba(0,0,0,0.05);
}

.header .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}.cart-item {
  background: white;
  margin: 20rpx 30rpx;
  border-radius: 28rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;   /* 关键：左右两端对齐，自动拉开距离 */
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06);
}

/* 2. 给菜名+图片包一层，让它们靠左对齐 */
.cart-item.left-box {
  display: flex;
  align-items: center;
  flex: 1;                       /* 占满左侧空间，把移除按钮挤到最右 */
}