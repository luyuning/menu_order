.menu-container { padding: 20rpx 20rpx 140rpx; background: #fdf9f5; }
.dish-card {
  background: white; margin-bottom: 40rpx; border-radius: 32rpx;
  overflow: hidden; box-shadow: 0 10rpx 30rpx rgba(212,56,13,0.1);
}
.dish-img { width: 100%; height: 480rpx; }
.dish-content { padding: 30rpx; }
.dish-name {
  font-size: 48rpx; font-weight: bold; color: #D4380D;
  margin-bottom: 30rpx; text-align: center;
}
.section-title {
  font-size: 36rpx; color: #D4380D; padding: 20rpx 0;
  border-top: 1rpx solid #fee; position: relative;
}
.arrow { position: absolute; right: 0; transition: all 0.3s; font-size: 40rpx; }
.arrow.up { transform: rotate(90deg); }
.section-content {
  font-size: 32rpx; line-height: 1.6; color: #555; padding: 20rpx 0 40rpx;
  white-space: pre-wrap;
}
.method-text { color: #8B4513; }
.add-btn {
  width: 100%; height: 100rpx; background: #D4380D; color: white;
  font-size: 40rpx; border-radius: 50rpx; margin-top: 20rpx;
}
.cart-badge {
  position: fixed; right: 50rpx; bottom: 200rpx; background: #ff3838;
  color: white; min-width: 50rpx; height: 50rpx; line-height: 50rpx;
  border-radius: 50%; text-align: center; font-size: 32rpx; z-index: 999;
}