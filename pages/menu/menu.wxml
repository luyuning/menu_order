<!-- pages/menu/menu.wxml -->
<view class="page">

<!-- 标题 -->
<view class="title">户家小炒 · 菜单</view>

<!-- 分类 Tab（吸顶更好看，加了个 fixed） -->
<view class="tabs">
  <view class="tab {{currentTab === '招牌菜' ? 'active' : ''}}" 
        catchtap="switchTab" data-category="招牌菜">招牌菜</view>
  <view class="tab {{currentTab === '热炒' ? 'active' : ''}}" 
        catchtap="switchTab" data-category="热炒">热炒</view>
  <view class="tab {{currentTab === '凉菜' ? 'active' : ''}}" 
        catchtap="switchTab" data-category="凉菜">凉菜</view>
  <view class="tab {{currentTab === '汤包' ? 'active' : ''}}" 
        catchtap="switchTab" data-category="汤包">汤包</view>
</view>

<!-- 菜品列表（根据 currentTab 过滤） -->
<view class="dish-list">
  <block wx:for="{{dishList}}" wx:key="id">
    <view class="item" wx:if="{{item.category === currentTab || currentTab === '全部'}}">
      <image src="{{item.img || '/images/default.jpg'}}" mode="aspectFill" class="dish-img"/>
      <view class="info">
        <view class="name">{{item.name}}</view>
        <view class="price">¥{{item.price}}</view>
        <!-- 可选：加个销量热销标签 -->
        <view class="sales" wx:if="{{item.sales > 200}}">热销 {{item.sales}}</view>
      </view>
      <button bindtap="addToCart" data-id="{{item.id}}" class="add">+</button>
    </view>
  </block>

  <!-- 空状态提示 -->
  <view wx:if="{{dishList.length === 0}}" class="empty">加载中...</view>
</view>

</view>