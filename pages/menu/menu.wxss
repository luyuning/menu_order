/* pages/menu/menu.wxss */
.page { height: 100vh; background: #f8f8f8; display: flex; flex-direction: column; }

.tab-bar {
  height: 100rpx;
  background: #fff;
  white-space: nowrap;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}
.tab-item {
  display: inline-block;
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.tab-item.active {
  color: #ff6b35;
  position: relative;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  width: 120rpx;
  height: 6rpx;
  background: #ff6b35;
  border-radius: 3rpx;
}

.dish-list { flex: 1; }
.dish-item {
  background: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}
.dish-img {
  width: 200rpx;
  height: 200rpx;
}
.info {
  flex: 1;
  padding: 20rpx;
  position: relative;
}
.name { font-size: 36rpx; font-weight: bold; }
.sales { font-size: 24rpx; color: #999; margin: 16rpx 0; }
.price { font-size: 40rpx; color: #ff6b35; font-weight: bold; }
.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 50%;
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  line-height: 60rpx;
  padding: 0;
  font-size: 48rpx;
}

.cart-badge {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  background: #ff6b35;
  color: #fff;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  font-size: 32rpx;
  z-index: 999;
}
.tabs {
  display: flex;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 99;
  border-bottom: 1px solid #eee;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
}
.tab.active {
  color: #e4393c;
  font-weight: bold;
  position: relative;
}
.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #e4393c;
  border-radius: 3rpx;
}