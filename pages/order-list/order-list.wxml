<!-- pages/order-list/order-list.wxml -->
<view class="container">
  <view class="header">最近30笔订单</view>

  <view class="list">
    <block wx:for="{{orderList}}" wx:key="id">
      <view class="order-item" bindtap="goDetail" data-id="{{item.id}}">
        <view class="left">
          <view class="no">订单号：{{item.order_no}}</view>
          <view class="time">{{item.create_time}}</view>
          <view class="status {{item.status}}">{{item.status === 'pending' ? '待处理' : '已完成'}}</view>
        </view>
        <view class="right">
          <view class="total">¥{{item.total_amount}}</view>
          <view class="count">{{item.dish_count}}道菜</view>
          <text class="arrow">></text>
        </view>
      </view>
    </block>

    <!-- 空状态 -->
    <view wx:if="{{orderList.length === 0}}" class="empty">
      暂无订单记录～快去点菜吧！
    </view>
  </view>

  <!-- 下拉刷新 -->
  <view class="load-more" wx:if="{{hasMore}}">下拉加载更多...</view>
</view>